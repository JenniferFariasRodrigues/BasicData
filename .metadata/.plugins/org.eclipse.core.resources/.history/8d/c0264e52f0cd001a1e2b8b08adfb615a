package entities;

public class Product {
	private String name;
	private double price;
	private int quantity;
	
//	Construtor:depois dos atributos, antes dos métodos
//Construtor obriga a receber nome,preço e quantidade
	public Product(String name, double price, int quantity) {
//	this=>Ref. para o pr´prio objeto.Atribuir a variável do construtor name, price e quantity e atribuir para o objeto da classe name, price, quantity

//		this.name= name;
		//	this.name referencia o atributo do objeto. No caso do public String name
//		e o name é referente ao name do construtor(dentro do parentese)
		this.name= name;
		this.price = price;
		this.quantity = quantity;
		
	}
	
//	exemplo sobrecarga. Disponibilizar mais de uma versão da mesma operação. Diferença entre elas são os parametors
	public Product(String name, double price) {
			this.name= name;
			this.price = price;
			
		}
	
//	Método para setar o nome
	public void setName(String name) {
		this.name = name;
	}
	
//	Método para pegar o nome
	public String getName() {
		return name;
	}
	
//	Método para setar o price
	public double getPrice() {
		return price;
		
	}
	
//	Método para pegar o price
	public void setPrice(double price) {
		this.price = price;
	}
	
//	Método para setar o quantity.Não faz o set para nao ter acesso ao quantity
//	e alterar o valor
	public double getQuantity() {
		return quantity;
		
	}
	
	
	public double totalValueInStock() {
		return price * quantity;
	}

	public void addProducts(int quantity) {
		this.quantity += quantity;
	}

	public void removeProducts(int quantity) {
		this.quantity -= quantity;
	}

	public String toString() {
		return name + ", $ " + String.format("%.2f", price) + ", " + quantity + " units, Total: $ "
				+ String.format("%.2f", totalValueInStock());
	}
}