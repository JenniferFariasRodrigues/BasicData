		//Exercicio2:Fazer um programa para ler um número inteiro e dizer se este número é par ou ímpar.
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		int number,restoDivisao,resultado;
		
		System.out.println("Write a number:");
		number = sc.nextInt();
		
		restoDivisao = number%2;
		resultado = restoDivisao/2;
		
		
		if (resultado==2) {
			System.out.println("Pair number");
		} else {
			System.out.println("Odd number");
		}		
	
//	Final da static e public classe main
